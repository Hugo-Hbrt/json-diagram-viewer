{
  "name": "json-diagram-viewer",
  "displayName": "JSON Diagram Viewer",
  "description": "Visualizes JSON files as interactive tree diagrams",
  "version": "1.0.1",
  "license": "MIT",
  "publisher": "Hugo-Hbrt",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hugo-Hbrt/json-diagram-viewer"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsonDiagramViewer.viewAsDiagram",
        "title": "View as Diagram",
        "category": "JSON Diagram"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "jsonDiagramViewer.viewAsDiagram",
          "when": "resourceLangId == json",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "jsonDiagramViewer.viewAsDiagram",
          "when": "resourceLangId == json",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "jsonDiagramViewer.viewAsDiagram",
          "when": "resourceLangId == json"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "clean": "rm -rf out webview-ui/dist",
    "rebuild": "npm run clean && npm run compile",
    "compile": "npm run compile:webview && tsc -p ./",
    "compile:webview": "cd webview-ui && npm run build",
    "watch": "tsc -watch -p ./",
    "watch:webview": "cd webview-ui && npm run dev",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "test": "npm run test:webview && npm run test:extension",
    "test:webview": "cd webview-ui && npm test -- --run",
    "test:extension": "node ./out/test/runTest.js",
    "postinstall": "cd webview-ui && npm install"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.50.0"
  }
}
